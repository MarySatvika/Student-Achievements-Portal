{
  "name": "student-achievement-portal",
  "version": "1.0.0",
  "description": "Backend for Student Achievement Portal",
  "main": "backend/server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "heroku-postbuild": "cd frontend && npm install && npm run build",
    "test": "jest",
    "test:mongo": "node backend/test/mongoTest.js",
    "test:login": "node backend/test/loginTest.js",
    "test:server": "node backend/test/serverTest.js"
  },
  "keywords": [
    "express",
    "mongoose",
    "achievement",
    "portal",
    "student"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.3",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.3",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "qrcode": "^1.5.4",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.10"
  }
}
